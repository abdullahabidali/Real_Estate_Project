<h1 class="text-2xl font-bold mb-4">Edit Profile</h1>

<%= form_with model: @user, url: profile_path, local: true, html: { multipart: true, class: "space-y-6" } do |f| %>
  <% if @user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block font-semibold" %>
    <%= f.text_field :name, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div>
    <%= f.label :phone, class: "block font-semibold" %>
    <%= f.text_field :phone, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div>
    <%= f.label :avatar, class: "block font-semibold" %>
    <% if @user.avatar.attached? %>
      <div class="mb-2">
        <%= image_tag @user.avatar.variant(resize_to_limit: [100, 100]), class: "rounded-full" %>
      </div>
    <% end %>
    <%= f.file_field :avatar, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div>
    <%= f.submit "Update Profile", class: "bg-blue-600 text-white px-4 py-2 rounded font-semibold hover:bg-blue-700" %>
    <%= link_to "Cancel", profile_path, class: "ml-4 text-blue-600 hover:underline" %>
  </div>
<% end %> 