<!-- Featured Properties Section -->
<div class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Featured Properties</h2>
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <% @featured_properties&.each do |property| %>
          <div class="swiper-slide">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition transform hover:scale-105 hover:shadow-2xl hover:bg-blue-50 cursor-pointer duration-300">
              <% if property.images.attached? %>
                <%= image_tag property.images.first, class: "w-full h-48 object-cover" %>
              <% else %>
                <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=800&q=80"
                     alt="No image" class="w-full h-48 object-cover opacity-80" />
              <% end %>
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-2"><%= property.title %></h3>
                <p class="text-gray-600 mb-2"><%= property.city %>, <%= property.state %></p>
                <p class="text-xl font-bold text-blue-600 mb-4">$<%= number_with_delimiter(property.price) %></p>
                <%= link_to "View Details", property_path(property), class: "block text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- Swiper navigation removed for pure auto-scroll -->
      <!-- <div class="swiper-button-next"></div> -->
      <!-- <div class="swiper-button-prev"></div> -->
      <!-- <div class="swiper-pagination"></div> -->
    </div>
    <div class="text-center mt-8">
      <%= link_to "View All Properties", properties_path, class: "inline-block bg-white text-blue-600 border-2 border-blue-600 px-6 py-2 rounded-lg hover:bg-blue-50 transition" %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    new Swiper('.mySwiper', {
      loop: true,
      slidesPerView: 3,
      spaceBetween: 30,
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      speed: 3500, // controls how fast it slides
      grabCursor: true,
      allowTouchMove: false, // disables manual swiping for pure auto-scroll
      breakpoints: {
        1024: { slidesPerView: 3 },
        768: { slidesPerView: 2 },
        0: { slidesPerView: 1 }
      }
    });
  });
</script>

